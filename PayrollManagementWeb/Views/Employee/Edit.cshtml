@model Employee
<div class="container">
    <form method="post">
    <input asp-for="EmployeeId" hidden/>
        <div class="row mt-4 mb-3">
            <div class="col-md-6"><h4 class="text-primary">Edit Employee</h4></div>

            <div class="col-md-6 text-end">
                <h4>

                    <label asp-for="CreatedAt">@DateTime.Now.ToString("dd-MMM-yyyy")</label>
                </h4>
            </div>
            <hr class="mt-2" />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="EmployeeCode" class="form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="EmployeeCode">
                    <span class="text-danger" asp-validation-for="EmployeeCode"></span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="Department" class="form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Department" class="form-control form-select">
                        <option>IT</option>
                        <option>Account</option>
                        <option>Sales</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="Designation" class="form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Designation" class="form-control form-select">
                        <option>Manager</option>
                        <option>HR</option>
                        <option>Junior-Engneer</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="Salary" class="form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Salary">
                </div>
            </div>

        </div>
        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">UPDATE</button>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary">Back To List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}